<Window
    x:Class="Ehrmann.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Ehrmann.View"
    Title="Ehrmann"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="View/Styles.xaml" />
    </Window.Resources>
    <Grid>
        <view:SelectView Visibility="{Binding IsApplySelect, Converter={StaticResource BoolToVisibilityConverterInverted}}" />
        <view:MainView Visibility="{Binding IsApplySelect, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</Window>
